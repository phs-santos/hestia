{
	"name": "hestia",
	"version": "1.0.1",
	"private": true,
	"description": "Hestia - Full Stack Application",
	"author": "Paulo Souza <paulo18santos2000@gmail.com>",
	"scripts": {
		"install:all": "npm install && cd server && npm install && cd ../client && npm install",
		"dev": "concurrently -n \"SERVER,CLIENT\" -c \"blue,green\" \"npm run dev:server\" \"npm run dev:client\"",
		"docker": "./docker/build.sh",
		"dev:client": "cd client && npm run dev",
		"dev:server": "cd server && npm run dev",
		"db:generate": "cd server && npm run db:generate",
		"db:migrate": "cd server && npm run db:migrate",
		"db:push": "cd server && npm run db:push",
		"db:studio": "cd server && npm run db:studio"
	},
	"dependencies": {
		"concurrently": "^9.2.1"
	}
}